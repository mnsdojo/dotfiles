{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "preview_tabs": {
    "enabled": false
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "format_on_save": "on",
  "terminal": {
    "copy_on_select": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
      },
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  }
}
